.wrap {
  width: 100%;
  min-height: 100vh;
  border-radius: 50rpx;
  background-color: #fff;
}

.container {

  width: 90%;
  min-height: 100vh;
  margin: auto;
  /* background-color: red; */
 
}

.nav {
  width: 100%;
  height: 80rpx;
  margin-top: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav image {
  width: 48rpx;
  height: 48rpx;
}

.nav image:nth-child(2) {
  width: 80rpx;
  height: 80rpx;
}

.banner {
  width: 100%;
  height: 380rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 第二节 热门推荐 */
.tabbar {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 14px;
}
.item{
  width: 25%;
  font-weight: 200;
  color: #b2b3b6;
  text-align: center;
  font-size: 13px;
  position: relative;
}
.item:nth-child(1){
  font-size: 16px;
  color: #3a3a3a;
  font-weight: 600;
}
.item:nth-child(1)::before{
  content: "";
  width: 50rpx;
  height: 6rpx;
  background-color: #ffdb25;
  position: absolute;
  bottom: -18rpx;
  left: 30%;
}
.view-list{
  width: 100%;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  display: grid;
  grid-template-columns: repeat(2,1fr);
  grid-template-rows: repeat(2,1fr);
  gap:30rpx;
}
.view-item{
  width: 100%;
  height: 450rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
} 
.view-item image{
  width: 100%;
  height: 100%;
}
.location{
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  color: #fff;
  font-size: 16px;
  font-weight: 700;
}
.name{
  margin-bottom: 10rpx;
}
.position{
  display: flex;
  align-items: center;
  font-size: 14px;

}
.position image{
  width: 32rpx;
  height: 32rpx;
  margin-left: -4rpx;
  margin-right: 10rpx;
}
/* 第三节 猜您喜欢 */
.likemore{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: 600;
}
.more{
  font-size: 14px;
  color: #b2b3b6;
  font-weight: 200;
}
.likelist{
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 200rpx;
}
.likelist-item{
  width: 31%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-weight: 200;
  font-size: 14px;
  color: #b2b3b6;
}
.likelist-item image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
/* 底部菜单 第四节 */
.menu{
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  border-top-left-radius: 70rpx;
  border-top-right-radius: 70rpx;
  box-shadow: 0px -2px 10px 4px rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
}
.menu-item{
  display: flex;
  flex-direction: column;
  font-size: 10px;
  text-align: center;
  color: #b2b3b6;
}
.menu-item image{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}
.menu-item:nth-child(3) image{
  width: 100rpx;
  height: 100rpx;
}

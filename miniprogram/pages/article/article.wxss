.wrap{
  width: 100%;
  min-height: 100vh;
  border-radius: 50rpx;
  background-color: #fff;
  overflow: hidden;
}
.thumbnail{
  width: 100%;
  height: 600rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
}
.thumbnail image{
  width: 100%;
  height: 100%;

}
.article{
  width: 100%;
  min-height: 100vh;
  background-color: #fff;
  margin-top: 560rpx;
  position: relative;
  z-index: 2;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
}
.content{
  width: 90%;
  min-height: 100vh;
  margin: auto;
}
.title{
  font-size: 20px;
  padding: 40rpx 0;
  font-weight: 200;
}
.author{
  width: 100%;
  height: 120rpx;
  background-color: #f5f6f8;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.author-item{
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}
.author image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.author-content{
  font-size: 14px;
  padding-left: 20rpx;
}
.name{
  font-weight: 600;
}
.slogan{
  font-size: 10px;
  color: #b2b3b6;
}
.follow{
  width: 140rpx;
  height: 60rpx;
  background-color: #ffdb25;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  margin-right: 30rpx;
}

.detail{
  width: 100%;
  height: 120rpx;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.detail-title{
  font-size: 12px;
  color: #b2b3b6;
}
.detail-content{
  font-size: 14px;
  font-weight: 600;
  margin-top: 8rpx;
}
.article-con{
  margin-top: 40rpx;
  margin-bottom: 200rpx;
  font-weight: 200;
  line-height: 1.6;
  font-size: 16px;
}
.article-con image{
  width: 100%;
  height: 400rpx;
  margin: 40rpx auto;
  border-radius: 30rpx;
}

/* 底部菜单 第四节 */
.menu{
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  border-top-left-radius: 70rpx;
  border-top-right-radius: 70rpx;
  box-shadow: 0px -2px 10px 4px rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  z-index: 3;
}
.menu-item{
  display: flex;
  flex-direction: column;
  font-size: 10px;
  text-align: center;
  color: #b2b3b6;
}
.menu-item image{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}
.menu-item:nth-child(3) image{
  width: 100rpx;
  height: 100rpx;
}
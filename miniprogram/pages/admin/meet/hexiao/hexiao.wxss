@import '../../../../style/project/base/admin.wxss';

page {
	background-color: #f8f8f8;
}
 
.cards {
  width: 100%;

  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}
.cards .leftCard {
  flex: 1;
  margin-right: 20rpx;
  height: 120rpx;
}
.leftCard .card {
  width: 100%;
  height: 100%;
}
.card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 25rpx;
}
.card .iconfont {
  font-size: 70rpx;
  margin-bottom: 10rpx;
}
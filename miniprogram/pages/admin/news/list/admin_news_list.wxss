@import '../../../../style/project/base/admin.wxss';

page {
	background-color: #f8f8f8;
}

.cards {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}
.cards .leftCard {
  flex: 1;
  margin-right: 20rpx;
  height: 150rpx;
}
.leftCard .card {
  width: 100%;
  height: 100%;
}
.rightCard {
  width: 28%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.rightCard .card {
  height: 75rpx;
  width: 100%;
}
.card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 25rpx;
}
.card .iconfont {
  font-size: 0rpx;
  margin-bottom: 5rpx;
}

